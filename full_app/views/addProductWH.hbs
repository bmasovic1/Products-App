 <div class="wrapper">
            <h2>Add new product</h2>
            {{#if alert}}
            <div>
                <br>
                <h4 style="color: green">{{alert}}</h4 >
            </div>
            {{/if}}
            {{#if data}}
            <form action="/warehouse/products/add" method="post">
                <div class="input-box">
                    <input type="text" placeholder="Name:" required name="name">
                </div>
                  <div class="input-box">
                  <select name="category" class="select" placeholder="Categorys:" required>
                      
                    {{#each data}}
                    <option value="{{this.name}}" value="{{this.name}}">{{this.name}}</option>
                    {{/each}}

                  </select>  
                </div>
                <div class="input-box">
                    <input type="text" placeholder="Quantity:" name="quantity" required>
                </div>
                <div class="input-box">
                    <input type="text" placeholder="Unit:" name="unit">
                </div>
                <div class="input-box">
                    <input type="text" placeholder="Price:" name="price">
                </div>
                <div class="input-box">
                  <select name="warehouse" class="select" placeholder="Branches:" required>
                    <option value="Poslovnica A" value="poslovnica_a">Poslovnica A</option>
                    <option value="Poslovnica B" value="poslovnica_b">Poslovnica B</option>
                  </select>  
                </div>
                <div class="input-box">
                    <input type="text" placeholder="City:" name="city">
                </div>
                 {{/if}}
                <div class="input-box button">
                    <input type="Submit" value="Add">
                </div>
               
            </form> 
            <div>
                <button>
                    <a type="button" href="/warehouse/products" style="color: black; text-decoration: none"><b>&nbsp <- PRODUCTS &nbsp</b> </a> <br></button>
                <br>
            </div>
        </div>