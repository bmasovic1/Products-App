<div class="table-container">
  <h1 class="heading">Categories</h1>
  
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Category</th>
        <th>Tax</th>
        <th>Tax name</th>
      </tr>
    </thead>
  {{#each data}}
    <tbody>
      <tr>
        <td data-label="ID">{{this.id}}</td>
        <td data-label="Category">{{this.name}}</td>
        <td data-label="Tax">{{this.PDV}}</td>
        <td data-label="Tax name">PDV</td>
      </tr>
    </tbody>{{/each}}
  </table>
  
  <div class="d-flex justify-content-between">
         <div class="text-muted">
            
         </div>
         <div class="d-flex flex-column justify-content-end align-items-end">
             <div class="d-flex px-3 pr-md-5 py-1 subtotal">
                 <button class="btn" class="px-4"><a href="/warehouse/category/add"
                  style="color: black; text-decoration: none"><b>ADD NEW CATEGORY+</b></a></button>
             </div>
         </div>
     </div>
</div>