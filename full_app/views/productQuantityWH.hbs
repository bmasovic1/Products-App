 <div class="wrapper"> 
      {{#if data}}
            <h2>Edit Quantity of product</h2>
            <h3 style="color: blue;">{{data.name}}</h3>
            {{#if alert}}
            <div>
                <br>
                <h4 style="color: green">{{alert}}</h4 >
            </div>
            {{/if}}
            <form action="/warehouse/products/quantity/{{data.id}}" method="post">
                <div class="input-box">
                    <input type="text" placeholder="Quantity:" name="quantity" value="{{data.quantity}}" required/>
                </div>
                <div class="input-box button">
                    <input type="Submit" value="Edit">
                </div>
            </form> 
            {{/if}}
             <div>
                <button>
                    <a type="button" href="/warehouse/products" style="color: black; text-decoration: none"><b>&nbsp <- PRODUCTS &nbsp</b> </a> <br></button>
                <br>
            </div>
        </div>