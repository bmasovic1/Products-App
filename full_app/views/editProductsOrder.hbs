    <div class="wrapper">
    {{#if alert}}
    <div>
        <br>
        <h4 style="color: green">{{alert}}</h4 >
    </div>
    {{/if}}
       {{#each products}}
            <form action="/user/orders/{{this.orderId}}/editProduct/{{this.branchProductId}}/{{this.orderProductId}}/{{this.userId}}" method="post">
                <div class="input-box">
                    <input type="text" placeholder="Name:" required name="name" value="{{this.name}}" required readonly/>
                </div>
                <div class="input-box">
                    <input type="text" placeholder="Quantity:" name="quantity" value="{{this.quantity}}" required/>
                </div>
                <div class="input-box">
                    <input type="text" placeholder="Unit:" name="unit" value="{{this.unit}}"required readonly/>
                </div>
                <div class="input-box">
                    <input type="text" placeholder="Price:" name="price" value="{{this.price}}"required readonly/>
                </div>
                <div class="input-box button">
                    <input type="Submit" value="Edit">
                </div>
            </form> 
    {{/each}}
    
</div>
{{#if order}}
        <button>
            <a type="button" href="/user/orders/{{order.userId}}" style="color: black; text-decoration: none"><b>&nbsp <- ORDERS &nbsp</b> </a> <br></button>
           {{/if}}    
